<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space"
    android:layout_margin="@dimen/space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_x20"
            app:srcCompat="@drawable/sample_image"
            android:scaleType="centerCrop"
            android:contentDescription="@string/thumbnail_image"/>

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space"
            android:layout_marginLeft="@dimen/space"
            android:background="@color/colorPrimary"
            android:fontFamily="casual"
            android:textSize="@dimen/display_text_size"
            android:padding="@dimen/space_half"
            android:textColor="@color/white"
            tools:text="Category Name" />

        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space"
            android:fontFamily="@font/tangerine"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/h3_text_size"
            android:textStyle="bold"
            tools:text="This is Recipe Name" />
    </LinearLayout>

</androidx.cardview.widget.CardView>